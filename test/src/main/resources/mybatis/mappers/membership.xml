<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="membership">

    <!-- Select all memberships -->
    <select id="getAllMemberships" resultType="MembershipVo">
	SELECT id, name, price FROM memberships
    </select>

    <!-- Select membership by ID -->
    <select id="getMembershipById" parameterType="int" resultType="MembershipVo">
    SELECT * FROM memberships WHERE id = #{id}
	</select>

    <!-- Insert a new membership -->
	 <insert id="insertMembership" parameterType="MembershipVo" useGeneratedKeys="true" keyProperty="id">
	   INSERT INTO memberships (name, price, duration)
	   VALUES (#{name}, #{price}, #{duration})
	</insert>
	
	<update id="updateMembership" parameterType="MembershipVo">
	    UPDATE memberships SET
	    name = #{name},
	    price = #{price},
	    duration = #{duration}
	    WHERE id = #{id}
	</update>


    <!-- Delete a membership by ID -->
    <delete id="deleteMembership" parameterType="int">
        DELETE FROM memberships WHERE id = #{id}
    </delete>

</mapper>
